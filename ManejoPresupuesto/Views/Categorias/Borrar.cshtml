@model Categoria
@{
    ViewData["Title"] = "Borrar Categoria";
}
<h3 class="mb-3">Estas seguro que deseas borrar la categoria @Model.Nombre?</h3>

<form asp-action="BorrarCategoria">
    <input type="hidden" asp-for="Id" />

    <button asp-action="BorrarCategoria" class="btn btn-danger">Borrar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>